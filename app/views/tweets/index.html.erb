<div class="p-4 max-w-lg mx-auto">
  <%= render "shared/flash" %>
  <h1>Tweet</h1>
  <%= render "form", tweet: Tweet.new %>
  <div id="tweets" class="my-4 grid gap-2 rounded">
    <% @tweets.each do |tweet| %>
      <div class="hover:bg-light-300" data-controller="tweet" data-tweet-url-value="<%= url_for(@tweet) %>" data-action="tweet#openTweet">
        <%= render tweet %>
      </div>
    <% end %>
  </div>
</div>
